<% provide :title, "Forums"%>
<% content_for :breadcrumb do%>
	<% @breadcrumbs = {'Forums' => forums_path}%>
<% end -%>
<% if @categories.count == 0 %> <h2>Sorry, no forums or categories.</h2>
<% else %>
<div class='row-fluid'>
	<% @categories.each do |c|%>	
	<div class="span6 category_block">
		<a name="cat<%= c.id%>"></a>
		<br />
		<div class="navbar">
			<div class="navbar-inner">
				<a class="brand" href="#"><%= c.name%></a>
			</div>
		</div>
		<% if c.forums.count > 0 %>
		<table class="table table-hover">
			<% c.forums.each do |f|%>
			<tr>
				<td> <%= link_to f.name, forum_path(f)%> </td>
				<td> <%= f.description%> </td>
			</tr>
			<% end %>
		</table>
		<% end %>
	</div>
	<% end %>
</div>
<% end %>
