<% content_for :breadcrumb do%>
	<% @breadcrumbs = {'Forums' => forums_path, @thread.forum.category.name => forums_category_path(@thread.forum.category.id),
		 @thread.forum.name => forum_view_path(@thread.forum.id), @thread.title => forum_thread_path(@thread.id), 'New Comment' => '#'}%>
<% end -%>
<div class="row">
	<div class="span10 offset1">
		<%= form_for @comment, url: {controller: :threads, action: :create_comment } do |f| %>
			<%= f.hidden_field :thread_id, value: @thread.id %>
		
			<%= f.text_area :body, size: '3x3' %>
			
			<%= f.submit "Post comment", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
