<% provide :title, @forum.name%>
<% content_for :breadcrumb do%>
<% @breadcrumbs = {'Forums' => forums_path, @forum.category.name => '#', @forum.name => forum_view_path(@forum)}%>
<% end -%>
<div class="navbar ">
	<div class="navbar-inner">
		<span class="brand"><%= @forum.name%></span>
		<ul class="nav">
			<li><%= link_to 'New Thread', new_forum_thread_path(@forum.id)%></li>
		</ul>
		<form action="" class="navbar-search pull-right">
			<input type="text" placeholder="Search- TODO" class="search-query span2">
		</form>
	</div>
</div>
<% if @forum.threads.count == 0 %>
<h2>Sorry, no threads in this forum.</h2>
<% else %>
<table class="table table-condensed table-hover">
	<thead>
		<th></th>
		<th>Title</th>
		<th>Author</th>
	</thead>
	<% @forum.threads.each do |t|%>
	<tr>
		<td></td>
		<td style="vertical-align: middle;">
			<%= link_to t.title, forum_thread_path(t.id) %>
		</td>
		<td>
			<% @user = t.author%>
			<%= render 'users/user_row' %>
		</td>
	</tr>
	<% end -%>
</table>
<% end -%>
