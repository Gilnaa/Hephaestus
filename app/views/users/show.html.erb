<div class="row-fluid">
	<div class="span3 text-center ">
		<a href="#" class="btn btn-block"> <i class="icon-envelope"></i> Send message </a>
		<% if @user == current_user %>
			<a href="#" class="btn btn-block"> <i class="icon-pencil"></i> Edit Profile </a>
		<% elsif signed_in? and current_user.is_admin? %>
			<a href="#" class="btn btn-block btn-info"> <i class="icon-pencil"></i> Edit Profile </a>
		<% end -%>
	</div>
	<div class="span9">
		<%= get_gravatar_for(@user, nil, "img-polaroid pull-right")%>
		<h1 ><%= @user.username.capitalize %></h1>
		
		<a href="#" class="label" style="background-color:  <%= @user.role.color%>">
			<%= @user.role.adjective %>
		</a>
		<br />
		<br />
		<h3>Personal Information</h3>
		<dl class="dl-horizontal">
			<dt>
				Registration Date
			</dt>
			<dd>
				<%= @user.created_at%>
			</dd>
			<dt>
				Birthday
			</dt>
			<dd>
				<!-- TODO -->
				<small>Not Yet Implemented</small>
			</dd>
			<br/>

		</dl>
		<div class="row-fluid">
			<div class="span6">
				<h3>Forum Statistics</h3>
				<dl class="dl-horizontal">
					<dt>
						# of Threads
					</dt>
					<dd>
						<%= @user.topics.count%> <%= link_to 'watch', '#', class: 'btn btn-mini pull-right'%>
					</dd>
					<br />
					<dt>
						# of Comments
					</dt>
					<dd>
						<%= @user.comments.count%> <%= link_to 'watch', '#', class: 'btn btn-mini pull-right'%>
					</dd>
				</dl>
			</div>
			<div class="span6">
				<h3>Blog Statistics</h3>
				<dl class="dl-horizontal">
					<dt>
						# of Threads
					</dt>
					<dd>
						<%= @user.topics.count%> <%= link_to 'watch', '#', class: 'btn btn-mini pull-right'%>
					</dd>
					<br />
					<dt>
						# of Comments
					</dt>
					<dd>
						<%= @user.comments.count%> <%= link_to 'watch', '#', class: 'btn btn-mini pull-right'%>
					</dd>
				</dl>
			</div>
		</div>
		<% if !@user.signature.nil? && !@user.signature.empty? %>
			<hr />
			<%= @user.signature%>
		<%end%>
	</div>
</div>
